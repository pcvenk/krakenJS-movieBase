<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>{+title /}</title>

        <link rel="stylesheet" href="/components/foundation/css/foundation.css">
        <link rel="stylesheet" href="/css/app.css">

    </head>
    <body>
        <header>
            <div class="row brand">
                <div class="columns medium-8">
                    <h1 class="brand"><a href="/movies">MovieBase</a></h1>
                </div>
                <div class="columns medium-4">
                    <a href="/movies/add" class="button right add-movie">Add Movie</a>
                </div>
            </div>
        </header>

        <div class="row">
            <div class="columns medium-4">
                   <form method="get" action="/movies/search">
                        <input type="hidden" name="_csrf" value="{_csrf}">
                        <div class="row">
                            <div class="columns medium-10">
                                <input type="text" name="searchMovies" placeholder="Search Movies">
                            </div>
                            <div class="columns medium-2">
                                <button class="button tiny orange">Go</button>
                            </div>
                        </div>
                    </form>
            </div>

            <div class="columns medium-12">
                <div class="side-nav-wrap">
                    <h5>Movie Genres</h3>
                    <ul class="side-nav">
                        <li><a href="/movies/genre/Action">Action</a></li>
                        <li><a href="/movies/genre/Comedy">Comedy</a></li>
                        <li><a href="/movies/genre/Drama">Drama</a></li>
                        <li><a href="/movies/genre/Documentary">Documentary</a></li>
                        <li><a href="/movies/genre/Horror">Horror</a></li>
                        <li><a href="/movies/genre/Thriller">Thriller</a></li>
                        <li><a href="/movies/genre/Other">Other</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="columns medium-12">
                {#errors}
                    <div class="alert alert-box">{.msg}</div>
                {/errors}
                {+body /}
            </div>
        </div>


        <script data-main="/js/app" src="/components/requirejs/require.js"></script>
        <script src="/components/jquery/dist/jquery.min.js"></script>
        <script src=/components/foundation/js/foundation.js"></script>

    </body>
</html>
